<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="200.0" maxWidth="400.0" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <VBox layoutX="150.0" layoutY="72.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox minHeight="70.0" prefHeight="70.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="70.0" text="Username:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" top="40.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="usernameText" maxHeight="20.0" maxWidth="190.0" minHeight="20.0" minWidth="190.0" prefHeight="20.0" prefWidth="190.0">
                            <HBox.margin>
                                <Insets left="10.0" top="40.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox prefHeight="100.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefWidth="70.0" text="Password:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="passwordText" maxHeight="20.0" maxWidth="190.0" minHeight="20.0" minWidth="190.0" prefHeight="20.0" prefWidth="190.0">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            <Label fx:id="errorLabel" prefHeight="18.0" prefWidth="353.0" text="Label" textFill="RED" visible="false">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            </children>
        </VBox>
        <Button minHeight="25.0" minWidth="55.0" mnemonicParsing="false" onAction="#onActionLogin" prefWidth="55.0" text="Login" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="250.0" />
        <Button layoutX="10.0" layoutY="10.0" minHeight="25.0" minWidth="55.0" mnemonicParsing="false" onAction="#onActionClearText" prefWidth="55.0" text="Clear" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="185.0" />
      <Label fx:id="userLocation" layoutX="10.0" layoutY="10.0" prefHeight="18.0" prefWidth="353.0" text="Label" visible="false" />
    </children>
</AnchorPane>
